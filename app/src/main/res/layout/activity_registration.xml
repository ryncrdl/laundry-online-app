<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Registration.RegistrationActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Registration"
            android:textAlignment="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="40dp"
            android:paddingVertical="20dp"
            android:textAllCaps="true"
            android:textColor="@color/textColor1"
            android:textSize="25dp"
            android:background="@drawable/bg"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your full name"
            android:textColor="@color/textColor1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"
            />
        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="e.g Mark C. Reyes"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your username"
            android:textColor="@color/textColor1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"
            />
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="e.g mark143"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your password"
            android:textColor="@color/textColor1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            />


        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your email"
            android:textColor="@color/textColor1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="e.g example@gmail.com"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your contact number"
            android:textColor="@color/textColor1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"
            />
        <EditText
            android:id="@+id/contactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="e.g 09234567341"
            android:inputType="number"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            />
        <FrameLayout
            android:id="@+id/uploadContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload valid id:"
                android:textColor="@color/textColor1"
                android:textSize="18sp"
                android:textStyle="bold"

                android:layout_gravity="start|center"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Upload image"
                android:textSize="12dp"
                android:layout_gravity="end"
                android:textColor="@color/textColor1"
                android:background="#eee"
                android:paddingHorizontal="20dp"
                />
        </FrameLayout>
        
        <ImageView
            android:id="@+id/imgValidId"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/bg"
            android:layout_marginVertical="10dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Register"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/textColor1"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg"
            />

        <TextView
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRegister"
            android:layout_marginVertical="10dp"
            android:text="Already have an account?"
            android:textColor="@color/textColor1"
            android:singleLine="true"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>